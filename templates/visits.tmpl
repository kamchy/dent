{{ template "header.tmpl" .}}
{{ block "vis" . }}
  <div class="section">
      <h1 class="title">
        Wizyty
      </h1>
      <p class="subtitle">
      {{ if not .curr }}
      Lista wizyt 
      {{ else }}
      {{.curr.Name}} {{.curr.Surname}}
      {{end}}
      </p>
  </div>
  <div class="section">
    <div class="columns">
        <div class="column">
              {{ template "vlist.tmpl" .}}
              {{ template "visit_add.tmpl" .}}
        </div>
        <div class="column">
        {{ if .currvis }}
          <form action={{.formdata.Action}} 
            method={{.formdata.Method}}>
          {{ template "visit.tmpl" .}}
          </form>
        {{end}}
        </div>
      </div>
    </div>
{{ end }}
{{ template "footer.tmpl" .}}
