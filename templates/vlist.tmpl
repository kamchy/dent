<table id="visits_table" class="table is-fullwidth">
  <thead>
    <th>Nr wizyty</th>
    <th>Imię</th>
    <th>Nazwisko</th>
    <th>Data</th>
    <th>Pokaż</th>
    <th>Usuń</th>
  </thead>
  <tbody>
    {{ range $r := .visits}}
      <tr 
       {{if $.currvis  }}
         {{ if eq $r.Id $.currvis.Id}} 
           class="is-selected" 
         {{end}}
       {{end}}
      >
        <th>
          {{ $r.Id }}
        </th>
        <td>{{$r.Name}}</td>
        <td>{{$r.Surname}}</td>
        <td>{{$r.VisitDateString}}</td>
        <td><a href="{{$r.GetLink}}">Pokaż</a></td>
        <td>
          <form method="POST" action="{{$r.DeleteLink}}">
            <button class="delete" type="submit"></button>
          </form>
        </td>
      </tr>
    {{end}}
   </tbody>
</table>

{{ if not .visits }}
  <div class="section">
    {{ if  .curr }}
    <h2> {{.curr.Name }} {{.curr.Surname}} nie ma jeszcze żadnych wizyt. </h2>
    {{end}}
    <p> Aby dodać wizytę, wciśnij przycisk "Dodaj" </p>
  </div>
{{end}}


