{{ template "header.tmpl" .}}
{{ block "pat" . }}
  <div class="section">
      <h1 class="title">
        Pacjenci
      </h1>
      <p class="subtitle">
      Lista pacjentów, dodawanie pacjentów, wyszukiwanie.
      </p>
    </div>
  <div class="section">
      <div class="columns">
      <div class="column">
        {{ template "plist.tmpl" .}}
        {{ template "patient_add.tmpl" .}}
      </div>
      <div class="column">
        {{ if .curr }}
        <form action={{.formdata.Action}} method={{.formdata.Method}}>
        {{ template "patient.tmpl" .}}
        </form>
      {{end}}

      </div>
    </div>
  </div>
{{ end }}
{{ template "footer.tmpl" .}}
